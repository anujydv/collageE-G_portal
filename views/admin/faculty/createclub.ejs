<% include ../partials/header.ejs %>
<div class="wrapper">
    <% include ../partials/navigation.ejs %>
    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Add Club</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <% if(msg){ %>
            <% if(status === true){ %>
            <div class="alert alert-success col-md-6 col-md-offset-3">
                <%}%>
                <% if(status === false){ %>
                <div class="alert alert-danger col-md-6 col-md-offset-3">
                    <%}%>
                    <p><%= msg%></p>
                </div>
                <%}%>
            <form action="/admin/createclub" method="POST" class="form-horizontal">
                <div class="box-body col-md-6">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-3 control-label">Club Name</label>

                        <div class="col-sm-9">
                            <input type="text" name="club_name" class="form-control" id="inputEmail3"
                                placeholder="Club Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Club Est.Date</label>

                        <div class="input-group class=" col-sm-9"">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" name="club_est" class="form-control"
                                data-inputmask="'alias': 'dd/mm/yyyy'" data-mask="">
                        </div>
                        <!-- /.input group -->
                    </div>
                </div>
                <div class="box-body col-sm-6">
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-3 control-label">College ID</label>
                        <div class="col-sm-9">
                            <input type="text" name="college_id" class="form-control" id="inputEmail3"
                                placeholder="Founder College Id">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword3" class="col-sm-3 control-label">Club Theme</label>

                        <div class="col-sm-9">
                            <input type="text" name="club_moto" class="form-control" id="inputPassword3"
                                placeholder="Club Theme">
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <input type="hidden" name="_csrf" value="<%= csrfToken%>" />
                <button type="submit" class="btn btn-info col-md-offset-6 ">Submit</button>
            </div>
            <!-- /.box-footer -->
            </form>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<footer class="main-footer">
    <div class="pull-right hidden-xs">
        <b>Version</b> 1.0.0
